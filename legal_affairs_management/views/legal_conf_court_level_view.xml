<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_legal_court_level_tree" model="ir.ui.view">
            <field name="name">legal.court.level.level.tree</field>
            <field name="model">legal.court.level</field>
            <field name="arch" type="xml">
                <tree sample="1" editable="bottom">
                    <field name="name"/>
                    <field name="active" invisible="1"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_legal_court_level_search" model="ir.ui.view">
            <field name="name">legal.court.level.level.search</field>
            <field name="model">legal.court.level</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="company_id"/>
                    <filter name="inactive_filter" string="Inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>


        <record id="action_legal_court_level" model="ir.actions.act_window">
            <field name="name">Courts Levels</field>
            <field name="res_model">legal.court.level</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="legal_court_level_menuitem" name="Courts Levels" parent="legal_affairs_management.legal_affairs_configurations_menu" action="action_legal_court_level" sequence="2"/>
    </data>
</odoo>