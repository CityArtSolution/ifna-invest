<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_legal_authorized_person_tree" model="ir.ui.view">
            <field name="name">legal.authorized.person.tree</field>
            <field name="model">legal.authorized.person</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="role"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_legal_authorized_person_search" model="ir.ui.view">
            <field name="name">legal.authorized.person.search</field>
            <field name="model">legal.authorized.person</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="role"/>
                    <field name="company_id"/>
                    <filter name="employee_filter" string="Employee" domain="[('role', '=', 'employee')]"/>
                    <filter name="company_rep_filter" string="Company Representative" domain="[('role', '=', 'company_rep')]"/>
                    <separator/>
                    <filter name="inactive_filter" string="Inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>


        <record id="action_legal_authorized_person" model="ir.actions.act_window">
            <field name="name">Authorized Persons</field>
            <field name="res_model">legal.authorized.person</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_legal_authorized_person" name="Authorized Persons" parent="legal_affairs_management.legal_affairs_configurations_menu" action="action_legal_authorized_person" sequence="6"/>
    </data>
</odoo>