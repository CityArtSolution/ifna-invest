<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_case_matters_tree" model="ir.ui.view">
            <field name="name">legal.case.tree</field>
            <field name="model">legal.case</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                    <field name="case_type_id"/>
                    <field name="court_id"/>
                    <field name="case_date"/>
                    <field name="case_status" widget="badge"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>
    
        <record id="view_case_matters_form" model="ir.ui.view">
            <field name="name">legal.case.form</field>
            <field name="model">legal.case</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object" name="action_create_execution_request" class="oe_highlight" string="Execution Request"/>
                        <button type="object" name="action_create_account_move_invoices" class="oe_highlight" string="Defendant Invoice"/>
                        <button type="object" name="action_create_legal_trail" string="Start New Trial"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_view_legal_trail"
                                    type="object" icon="fa-bars">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="legal_trail_count"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Trials
                                    </span>
                                </div>
                            </button>
                            <button class="oe_stat_button" name="action_view_account_move_invoices"
                                    type="object" icon="fa-pencil-square-o">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="account_move_count"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Defendant Invoices
                                    </span>
                                </div>
                            </button>
                            <button class="oe_stat_button" name="action_view_execution_request"
                                    type="object" icon="fa-calendar">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="execution_request_count"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Execution Requests
                                    </span>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title mb24">
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="account_move_count" invisible="1"/>
                            <field name="execution_request_count" invisible="1"/>
                            <field name="legal_trail_count" invisible="1"/>
                            <label for="name">Name</label>
                            <h1>
                                <field class="text-break" name="name" default_focus="1"/>
                            </h1>
                            <div class="o_row">
                                <field name="case_type_id" placeholder="Case Type..."/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="plaintiff_id" context="{'default_is_legal_plaintiff': True}"/>
                                <field name="partner_id" widget="res_partner_many2one" context="{'default_is_legal_defendant': True}"/>
                                <field name="lawyer_id" context="{'default_is_legal_lawyer': True}"/>
                                <field name="legal_field"/>
                            </group>
                            <group>
                                <field name="currency_id" invisible="1"/>
                                <field name="claim_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="judge_id" context="{'default_is_legal_judge': True}"/>
                                <field name="court_id"/>
                                <field name="court_level"/>
                            </group>
                        </group>
                        <group string=" ">
                            <group>
                                <field name="case_date"/>
                            </group>
                            <group>
                                <field name="case_status"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Trials">
                                <field name="trail_ids">
                                    <tree create="0">
                                        <field name="trial_date"/>
                                        <field name="trail_details"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Attachments">
                                <field name="attachment_ids" widget="many2many_binary" colspan="2"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
                </form>
            </field>
        </record>

        <record id="view_case_matters_search" model="ir.ui.view">
            <field name="name">legal.case.search</field>
            <field name="model">legal.case</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="case_type_id"/>
                    <field name="court_id"/>
                    <field name="case_status"/>
                    <field name="plaintiff_id" domain="[('is_legal_plaintiff', '=', True)]"/>
                    <field name="partner_id" domain="[('is_legal_defendant', '=', True)]"/>
                    <field name="lawyer_id" domain="[('is_legal_lawyer', '=', True)]"/>
                    <field name="judge_id" domain="[('is_legal_judge', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Type" name="group_by_case_type_id" context="{'group_by':'case_type_id'}"/>
                        <filter string="Court" name="group_by_court_id" context="{'group_by':'court_id'}"/>
                        <filter string="Lawyer" name="group_by_lawyer_id" context="{'group_by':'lawyer_id'}"/>
                        <filter string="Judge" name="group_by_judge_id" context="{'group_by':'judge_id'}"/>
                        <filter string="Company" name="group_by_company" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_case_matters" model="ir.actions.act_window">
            <field name="name">Case &amp; Matters</field>
            <field name="res_model">legal.case</field>
            <field name="view_mode">tree,form</field>
        </record>
    
        <menuitem id="legal_case_menuitem" name="Case &amp; Matters" parent="legal_affairs_management.cases_and_execution_requests_menu" action="action_case_matters" sequence="2"/>
    </data>
</odoo>