<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_legal_court_tree" model="ir.ui.view">
            <field name="name">legal.court.tree</field>
            <field name="model">legal.court</field>
            <field name="arch" type="xml">
                <tree sample="1" editable="bottom">
                    <field name="name"/>
                    <field name="court_level"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_legal_court_search" model="ir.ui.view">
            <field name="name">legal.court.search</field>
            <field name="model">legal.court</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="court_level"/>
                    <field name="company_id"/>
                    <filter name="inactive_filter" string="Inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>


        <record id="action_legal_court" model="ir.actions.act_window">
            <field name="name">Courts</field>
            <field name="res_model">legal.court</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_legal_court" name="Courts" parent="legal_affairs_management.legal_affairs_configurations_menu" action="action_legal_court" sequence="2"/>
    </data>
</odoo>