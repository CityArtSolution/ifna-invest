<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_board_decision_tree" model="ir.ui.view">
            <field name="name">legal.board.decision.tree</field>
            <field name="model">legal.board.decision</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                    <field name="decision_date"/>
                    <field name="document_status" widget="badge"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_board_decision_form" model="ir.ui.view">
            <field name="name">legal.board.decision.form</field>
            <field name="model">legal.board.decision</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="document_status" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title mb24">
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <label for="name">Decision Subject</label>
                            <h1>
                                <field class="text-break" name="name" default_focus="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="decision_date"/>
                            </group>
                            <group>
                                <field name="attachment" filename="attachment_filename"/>
          	                    <field name="attachment_filename" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="notes" widget="html" placeholder="Enter your Notes...."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
                </form>
            </field>
        </record>

        <record id="view_board_decision_search" model="ir.ui.view">
            <field name="name">legal.board.decision.search</field>
            <field name="model">legal.board.decision</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="decision_date"/>
                    <field name="document_status"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Company" name="group_by_company" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_board_decision" model="ir.actions.act_window">
            <field name="name">Board Decisions</field>
            <field name="res_model">legal.board.decision</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="legal_board_decision_menuitem" name="Board Decisions" parent="legal_affairs_management.company_documents_and_licenses_menu" action="action_board_decision" sequence="1"/>
    </data>
</odoo>