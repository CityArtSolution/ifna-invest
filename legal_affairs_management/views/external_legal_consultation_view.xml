<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_external_legal_consultation_tree" model="ir.ui.view">
            <field name="name">external.legal.consultation.tree</field>
            <field name="model">external.legal.consultation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="lawyer_id"/>
                    <field name="consultation_date"/>
                    <field name="legal_consultation_type_id"/>
                    <field name="document_status" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_external_legal_consultation_form" model="ir.ui.view">
            <field name="name">external.legal.consultation.form</field>
            <field name="model">external.legal.consultation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="document_status" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title mb24">
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <label for="name">Name</label>
                            <h1>
                                <field class="text-break" name="name" default_focus="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="lawyer_id"/>
                                <field name="response"/>
                                <field name="response_date"/>
                            </group>
                            <group>
                                <field name="consultation_date"/>
                                <field name="legal_consultation_type_id"/>
                                <field name="attachment" filename="attachment_filename"/>
          	                    <field name="attachment_filename" invisible="1"/>
                            </group>
                            <notebook>
                                <page string="Description" name="description">
                                    <field name="notes" widget="html" placeholder="Enter Your Notes...."/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
                </form>
            </field>
        </record>

        <record id="view_external_legal_consultation_search" model="ir.ui.view">
            <field name="name">external.legal.consultation.search</field>
            <field name="model">external.legal.consultation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="lawyer_id"/>
                    <field name="consultation_date"/>
                    <field name="document_status"/>
                    <field name="legal_consultation_type_id"/>
                    <filter string="Inactive" name="filter_inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_external_legal_consultation" model="ir.actions.act_window">
            <field name="name">External Legal Consultations</field>
            <field name="res_model">external.legal.consultation</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_external_legal_consultation_tree"/>
        </record>

        <menuitem id="external_legal_consultation_menuitem" name="External Legal Consultations" parent="legal_affairs_management.legal_affairs_management_root" action="action_external_legal_consultation" sequence="2"/>
    </data>
</odoo>
