<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="legal_res_partner_inherit_view_form" model="ir.ui.view">
            <field name="name">legal.res.partner.inherit.view.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <field name="is_legal_defendant" invisible="1"/>
                    <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-file-text"
                            attrs="{'invisible': [('is_legal_defendant', '=', False)]}">
                        <field name="overdue_invoice_count" widget="statinfo"/>
                        <div class="o_field_value">
                            <span>Overdue Invoices</span>
                        </div>
                    </button>
                    <button name="action_view_latest_invoice_pdf" type="object" class="oe_stat_button" icon="fa-file-pdf-o"
                            attrs="{'invisible': [('is_legal_defendant', '=', False)]}">
                        <div class="o_field_value">
                            <span>Latest Invoice PDF</span>
                        </div>
                    </button>
                </div>

                <div class="oe_title mb24" position="after">
                    <field name="show_legal_group" invisible="1"/>
                    <field name="is_main_view" invisible="1"/>
                    <group col="4" attrs="{'invisible': ['|', ('show_legal_group', '=', True), ('is_main_view', '=', False)]}">
                        <group>
                            <field name="is_legal_defendant" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="is_legal_lawyer" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="is_legal_judge" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="is_legal_authorized" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group>
                        <field name="lawyer_law_area" attrs="{'invisible': [('is_legal_lawyer', '=', False)]}"/>
                    </group>
                    <br/>
                </div>
            </field>
        </record>

        <record id="contacts.action_contacts" model="ir.actions.act_window">
            <field name="context">{'default_is_company': True, 'default_is_main_view': True}</field>
        </record>
    </data>
</odoo>