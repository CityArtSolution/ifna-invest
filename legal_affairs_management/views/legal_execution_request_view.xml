<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_execution_request_tree" model="ir.ui.view">
            <field name="name">legal.execution.request.tree</field>
            <field name="model">legal.execution.request</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="execution_amount"/>
                    <field name="court_id"/>
                    <field name="document_status" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_execution_request_form" model="ir.ui.view">
            <field name="name">legal.execution.request.form</field>
            <field name="model">legal.execution.request</field>
            <field name="arch" type="xml">
                <form string="Execution Request">
                    <header>
                        <button type="object" name="action_create_journal_entries" class="oe_highlight" string="Create Journal Entries"/>
                        <button type="object" name="action_create_account_payments" class="oe_highlight" string="Create Case Payment"/>
                        <field name="document_status" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" class="oe_stat_button" icon="fa-file-o" name="action_view_journal_entries">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="account_journal_count"/>
                                    </span>
                                    <span class="o_stat_text">Journal Entries</span>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <widget name="web_ribbon" title="Paid" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'paid')]}"/>
                        <widget name="web_ribbon" title="Not paid" bg_color="bg-warning" attrs="{'invisible': [('state', '!=', 'not_paid')]}"/>
                        <div class="oe_title mb24">
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="is_remaining_amount" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="attachment_filename" invisible="1"/>
                            <br/>
                            <label for="name"/>
                            <h1>
                                <field class="text-break" name="name" default_focus="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="case_id"/>
                                <field name="plaintiff_id" context="{'default_is_legal_plaintiff': True}"/>
                                <field name="partner_id" widget="res_partner_many2one" context="{'default_is_legal_defendant': True}"/>
                            </group>
                            <group>
                                <field name="court_id"/>
                                <field name="execution_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="attachment" filename="attachment_filename"/>
                            </group>
                        </group>
                        <group string="  ">
                            <group>
                                <field name="state" widget="radio" options="{'horizontal': true}"/>
                                <field name="remaining_amount" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': ['|', ('state', '!=', 'paid'), ('is_remaining_amount', '=', False)]}"/>
                            </group>
                            <group attrs="{'invisible': [('state', '!=', 'paid')]}">
                                <field name="journal_id" placeholder="Journal Account..." options="{'no_create': True}" attrs="{'invisible': [('state', '!=', 'paid')]}"/>
                                <field name="account_id" placeholder="Remaining Account..." options="{'no_create': True}" attrs="{'invisible': [('is_remaining_amount', '=', False)], 'required': [('is_remaining_amount', '=', True)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Payments">
                                <field name="account_payment_ids">
                                    <tree sample="1" create="0" delete="0">
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="partner_id" string="Customer"/>
                                        <field name="amount_signed" string="Amount in Currency" groups="base.group_multi_currency" optional="hide"/>
                                        <field name="currency_id" string="Payment Currency" groups="base.group_multi_currency" optional="hide"/>
                                        <field name="amount_company_currency_signed" widget="monetary" string="Amount" sum="Total"/>
                                        <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'"/>
                                    </tree>
                                </field>
                                <group col="12">
                                    <group colspan="4"/>
                                    <group colspan="4"/>
                                    <group colspan="4">
                                        <group class="oe_subtotal_footer oe_right">
                                            <field name="total_required" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                            <field name="total_payment" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                            <field name="total_residual" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        </group>
                                    </group>
                                </group>
                            </page>
                            <page string="Description">
                                <field name="notes" widget="html" placeholder="Enter Your Notes ..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
                </form>
            </field>
        </record>

        <record id="view_execution_request_search" model="ir.ui.view">
            <field name="name">legal.execution.request.search</field>
            <field name="model">legal.execution.request</field>
            <field name="arch" type="xml">
                <search string="Execution Requests">
                    <field name="name"/>
                    <field name="case_id"/>
                    <field name="partner_id" domain="[('is_legal_defendant', '=', True)]"/>
                    <field name="plaintiff_id" domain="[('is_legal_plaintiff', '=', True)]"/>
                    <field name="court_id"/>
                    <field name="document_status"/>
                    <separator/>
                        <filter string="Paid" name="paid_filter" domain="[('state', '=', 'paid')]"/>
                        <filter string="Not paid" name="not_paid_filter" domain="[('state', '=', 'not_paid')]"/>
                    <separator/>
                    <filter string="Draft" name="draft_filter" domain="[('document_status', '=', 'draft')]"/>
                    <filter string="Approved" name="submitted_filter" domain="[('document_status', '=', 'approved')]"/>
                    <filter string="Submitted" name="submitted_filter" domain="[('document_status', '=', 'submitted')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Defendant" name="department" domain="[]" context="{'group_by': 'partner_id'}"/>
                        <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Document Status" name="document_status" domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_execution_request" model="ir.actions.act_window">
            <field name="name">Execution Requests</field>
            <field name="res_model">legal.execution.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item -->
        <menuitem id="legal_execution_request_menuitem" name="Execution Requests" parent="legal_affairs_management.cases_and_execution_requests_menu" action="action_execution_request" sequence="4"/>
    </data>
</odoo>