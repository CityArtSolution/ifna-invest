<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_execution_request_tree" model="ir.ui.view">
            <field name="name">legal.execution.request.tree</field>
            <field name="model">legal.execution.request</field>
            <field name="arch" type="xml">
                <tree string="Execution Requests">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="execution_amount"/>
                    <field name="court_id"/>
                    <field name="document_status" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_execution_request_form" model="ir.ui.view">
            <field name="name">legal.execution.request.form</field>
            <field name="model">legal.execution.request</field>
            <field name="arch" type="xml">
                <form string="Execution Request">
                    <header>
                        <field name="document_status" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title mb24">
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <label for="name">Request Number</label>
                            <h1>
                                <field class="text-break" name="name" default_focus="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="plaintiff"/>
                                <field name="partner_id" widget="res_partner_many2one" context="{'default_is_legal_defendant': True}"/>
                            </group>
                            <group>
                                <field name="court_id"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="execution_amount" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'readonly': [('partner_id', '=', False)]}"/>
                                <field name="attachment" filename="attachment_filename"/>
          	                    <field name="attachment_filename" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="notes" widget="html" placeholder="Enter Your Notes ..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
                </form>
            </field>
        </record>

        <record id="view_execution_request_search" model="ir.ui.view">
            <field name="name">legal.execution.request.search</field>
            <field name="model">legal.execution.request</field>
            <field name="arch" type="xml">
                <search string="Execution Requests">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="court_id"/>
                    <field name="document_status"/>
                    <filter string="Draft" name="draft_filter" domain="[('document_status', '=', 'draft')]"/>
                    <filter string="Approved" name="submitted_filter" domain="[('document_status', '=', 'approved')]"/>
                    <filter string="Submitted" name="submitted_filter" domain="[('document_status', '=', 'submitted')]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_execution_request" model="ir.actions.act_window">
            <field name="name">Execution Requests</field>
            <field name="res_model">legal.execution.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item -->
        <menuitem id="legal_execution_request_menuitem" name="Execution Requests" parent="legal_affairs_management.cases_and_execution_requests_menu" action="action_execution_request" sequence="4"/>
    </data>
</odoo>