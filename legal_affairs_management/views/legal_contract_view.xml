<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_contract_tree" model="ir.ui.view">
            <field name="name">legal.contract.tree</field>
            <field name="model">legal.contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_contract_form" model="ir.ui.view">
            <field name="name">legal.contract.form</field>
            <field name="model">legal.contract</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title mb24">
                            <field name="active" invisible="1"/>
                            <label for="name">Name</label>
                            <h1>
                                <field id="name" class="text-break" name="name" default_focus="1"/>
                            </h1>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_contract_search" model="ir.ui.view">
            <field name="name">legal.contract.search</field>
            <field name="model">legal.contract</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="company_id"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Company" name="group_by_company" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_contracts" model="ir.actions.act_window">
            <field name="name">Contracts</field>
            <field name="res_model">legal.contract</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="legal_contracts_submenu" name="Contracts" parent="legal_affairs_management.contracts_outgoing_letters_menu" action="action_contracts" sequence="1"/>
    </data>
</odoo>
