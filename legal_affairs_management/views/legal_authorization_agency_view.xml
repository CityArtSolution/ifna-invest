<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_authorization_agency_tree" model="ir.ui.view">
            <field name="name">legal.authorization.agency.tree</field>
            <field name="model">legal.authorization.agency</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="authorization_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="document_status" widget="badge"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_authorization_agency_form" model="ir.ui.view">
            <field name="name">legal.authorization.agency.form</field>
            <field name="model">legal.authorization.agency</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="document_status" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title mb24">
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="authorization_type" widget="radio" options="{'horizontal': true}"/>
                            <h1>
                                <field class="text-break" name="name" default_focus="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="authorized_person_id"/>
                                <field name="authorized_role"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="attachment" filename="attachment_filename"/>
          	                    <field name="attachment_filename" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="notes" widget="html" placeholder="Enter your Notes...."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
                </form>
            </field>
        </record>

        <record id="view_authorization_agency_search" model="ir.ui.view">
            <field name="name">legal.authorization.agency.search</field>
            <field name="model">legal.authorization.agency</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="partner_id"/>
                    <field name="authorization_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>

                    <filter string="Authorization" name="filter_by_auth_type" domain="[('authorization_type', '=', 'agency')]"/>
                    <filter string="Agency" name="filter_by_agen_type" domain="[('authorization_type', '=', 'authorization')]"/>
                    <separator/>
                    <filter string="Inactive" name="filter_inactive" domain="[('active', '=', False)]"/>

                    <group expand="0" string="Group By">
                        <filter string="Company" name="group_by_company" context="{'group_by':'company_id'}"/>
                        <filter string="Authorization Type" name="group_by_auth_type" context="{'group_by':'authorization_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_authorization_agency" model="ir.actions.act_window">
            <field name="name">Authorizations &amp; Agencies</field>
            <field name="res_model">legal.authorization.agency</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="authorization_agency_menuitem" name="Authorizations &amp; Agencies" parent="legal_affairs_management.legal_affairs_management_root" action="action_authorization_agency" sequence="3"/>

    </data>
</odoo>
