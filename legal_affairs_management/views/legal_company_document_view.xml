<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_document_tree" model="ir.ui.view">
            <field name="name">legal.company.document.tree</field>
            <field name="model">legal.company.document</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="issue_date"/>
                    <field name="expiration_date"/>
                    <field name="document_status" widget="badge"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_company_document_form" model="ir.ui.view">
            <field name="name">legal.company.document.form</field>
            <field name="model">legal.company.document</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="document_status" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title mb24">
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <label for="name">Document Name</label>
                            <h1>
                                <field class="text-break" name="name" default_focus="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="issue_date"/>
                                <field name="expiration_date"/>
                            </group>
                            <group>
                                <field name="attachment" filename="attachment_filename"/>
          	                    <field name="attachment_filename" invisible="1"/>
                            </group>
                        </group>
                        <group string="  ">
                            <group>
                                <field name="commercial_registration"/>
                                <field name="chamber_of_commerce"/>
                                <field name="chamber_of_commerce_subscription"/>
                            </group>
                            <group>
                                <field name="national_address"/>
                                <field name="real_estate_management_brokerage"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="notes" widget="html" placeholder="Enter your Notes...."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
                </form>
            </field>
        </record>

        <record id="view_company_document_search" model="ir.ui.view">
            <field name="name">legal.company.document.search</field>
            <field name="model">legal.company.document</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="issue_date"/>
                    <field name="expiration_date"/>
                    <field name="document_status"/>
                    <field name="national_address"/>
                    <field name="chamber_of_commerce"/>
                    <field name="commercial_registration"/>
                    <field name="chamber_of_commerce_subscription"/>
                    <field name="real_estate_management_brokerage"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Company" name="group_by_company" context="{'group_by':'company_id'}"/>
                        <filter name="group_by_auth_type" string="Group by Document Status" context="{'group_by':'document_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_company_document" model="ir.actions.act_window">
            <field name="name">Company Documents</field>
            <field name="res_model">legal.company.document</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="legal_company_document_menuitem" name="Company Documents" parent="legal_affairs_management.company_documents_and_licenses_menu" action="action_company_document" sequence="2"/>
    </data>
</odoo>