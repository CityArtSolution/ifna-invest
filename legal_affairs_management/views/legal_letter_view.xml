<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_letter_tree" model="ir.ui.view">
            <field name="name">legal.letter.tree</field>
            <field name="model">legal.letter</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_letter_form" model="ir.ui.view">
            <field name="name">legal.letter.form</field>
            <field name="model">legal.letter</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title mb24">
                            <field name="active" invisible="1"/>
                            <label for="name">Name</label>
                            <h1>
                                <field id="name" class="text-break" name="name" default_focus="1"/>
                            </h1>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
                </form>
            </field>
        </record>

        <record id="view_letter_search" model="ir.ui.view">
            <field name="name">legal.letter.search</field>
            <field name="model">legal.letter</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="company_id"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Company" name="group_by_company" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_letters" model="ir.actions.act_window">
            <field name="name">Letters</field>
            <field name="res_model">legal.letter</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="legal_letters_submenu" name="Letters" parent="legal_affairs_management.contracts_outgoing_letters_menu" action="action_letters" sequence="4"/>

    </data>
</odoo>