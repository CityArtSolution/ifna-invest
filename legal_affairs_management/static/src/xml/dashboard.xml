<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PjDashboard">
        <div class="oh_dashboards" style="margin-top: 20px;">
            <div class="container-fluid o_pj_dashboard">
            </div>
        </div>
    </t>

    <t t-name="LegalCaseDashboard">
        <div class="row">
            <!-- Card 1 -->
            <div class="col-md-4 col-sm-6 oh-payslip tot_consultations">
                <div class="oh-card" style="cursor:pointer;border-radius: 10px; background-color: #e3f2fd; border: none; padding: 20px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
                    <div class="oh-card-body text-center tot_consultations">
                        <div class="stat_count" style="font-size: 36px; color: #0d47a1; font-weight: bold;" id="tot_consultations">
                            <t t-esc="widget.total_consultations" />
                        </div>
                        <div class="stat-head" style="font-size: 18px; color: #1e88e5; margin-top: 10px;text-align: center !important;">
                            Total Consultations
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <!-- <div class="col-md-4 col-sm-6 oh-payslip tot_client">
                <div class="oh-card" style="cursor:pointer;border-radius: 10px; background-color: #f1f8e9; border: none; padding: 20px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
                    <div class="oh-card-body text-center tot_client">
                        <div class="stat_count" style="font-size: 36px; color: #1b5e20; font-weight: bold;" id="tot_client">
                            <t t-esc="widget.total_clients" />
                        </div>
                        <div class="stat-head" style="font-size: 18px; color: #43a047; margin-top: 10px;text-align: center !important;">
                            Total Defendants
                        </div>
                    </div>
                </div>
            </div> -->

            <!-- Card 3 -->
            <div class="col-md-4 col-sm-6 oh-payslip">
                <div class="oh-card" style="cursor:pointer;border-radius: 10px; background-color: #fff8e1; border: none; padding: 20px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
                    <div class="oh-card-body text-center tot_auths_agens">
                        <div class="stat_count" style="font-size: 36px; color: #e65100; font-weight: bold;" id="tot_auth_agen">
                            <t t-esc="widget.total_auths_agens" />
                        </div>
                        <div class="stat-head" style="font-size: 18px; color: #fb8c00; margin-top: 10px;text-align: center !important;">
                            Total Authorizations &amp; Agencies
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 4 -->
            <div class="col-md-4 col-sm-6 oh-payslip">
                <div class="oh-card" style="cursor:pointer;border-radius: 10px; background-color: #f3e5f5; border: none; padding: 20px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
                    <div class="oh-card-body text-center tot_decisions">
                        <div class="stat_count" style="font-size: 36px; color: #4a148c; font-weight: bold;" id="tot_decisions">
                            <t t-esc="widget.total_decisions" />
                        </div>
                        <div class="stat-head" style="font-size: 18px; color: #8e24aa; margin-top: 10px;text-align: center !important;">
                            Total Board Decisions
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <!-- Card 5 -->
            <div class="col-md-4 col-sm-6 oh-payslip">
                <div class="oh-card" style="cursor:pointer;border-radius: 10px; background-color: #e0f7fa; border: none; padding: 20px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
                    <div class="oh-card-body text-center tot_requests">
                        <div class="stat_count" style="font-size: 36px; color: #00838f; font-weight: bold;" id="tot_request">
                            <t t-esc="widget.total_requests" />
                        </div>
                        <div class="stat-head" style="font-size: 18px; color: #00acc1; margin-top: 10px;text-align: center !important;">
                            Total Execution Requests
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 6 -->
            <div class="col-md-4 col-sm-6 oh-payslip">
                <div class="oh-card" style="cursor:pointer;border-radius: 10px; background-color: #fafad2; border: none; padding: 20px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
                    <div class="oh-card-body text-center tot_paids">
                        <div class="stat_count" style="font-size: 36px; color: #b8860b; font-weight: bold;" id="tot_paid">
                            <t t-esc="widget.total_paids" />
                        </div>
                        <div class="stat-head" style="font-size: 18px; color: #daa520; margin-top: 10px;text-align: center !important;">
                            Total UnPaid Amounts
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 7 -->
            <div class="col-md-4 col-sm-6 oh-payslip">
                <div class="oh-card" style="cursor:pointer;border-radius: 10px; background-color: #ffe4e1; border: none; padding: 20px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
                    <div class="oh-card-body text-center tot_unpaids">
                        <div class="stat_count" style="font-size: 36px; color: #b22222; font-weight: bold;" id="tot_unpaid">
                            <t t-esc="widget.total_unpaids" />
                        </div>
                        <div class="stat-head" style="font-size: 18px; color: #ff4500; margin-top: 10px;text-align: center !important;">
                            Total Paid Amounts
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <style>
                #legal_case_table thead {
                    color: #6f42c1;
                }
                #legal_case_table thead th {
                    text-align: center;
                    padding: 10px;
                    border-bottom: 2px solid #dee2e6;
                }
                #legal_case_table tbody tr:nth-child(even) {
                    background-color: #f2f2f2;
                }
                #legal_case_table tbody td {
                    text-align: center;
                    padding: 10px;
                }
                .badge-status {
                    padding: 5px 10px;
                    border-radius: 5px;
                    color: #fff;
                    font-size: 0.9em;
                }
                .badge-status.open {
                    background-color: #28a745;
                }
                .badge-status.closed {
                    background-color: #dc3545;
                }
            </style>

            <div class="col-lg-12 col-sm-12 o_legal_case_dashboard">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Legal Case Details</h1>
                    </div>
                    <div class="card-body" style="overflow: auto;">
                        <table class="table table-borderless table-hover" id="legal_case_table">
                            <thead>
                                <tr style="text-align:center">
                                    <th>#</th>
                                    <th>Case</th>
                                    <th>Court</th>
                                    <th>Lawyer</th>
                                    <th>Plaintiff</th>
                                    <th>Defendant</th>
                                    <th>Trials</th>
                                    <th>Claim Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="widget.case_data">
                                    <tr style="text-align:center" t-foreach="widget.case_data" t-as="case">
                                        <td><t t-esc="case['id']"/></td>
                                        <td><t t-esc="case['name']"/></td>
                                        <td><t t-esc="case['court_name']"/></td>
                                        <td><t t-esc="case['lawyer_name']"/></td>
                                        <td><t t-esc="case['plaintiff_name']"/></td>
                                        <td><t t-esc="case['defendant_name']"/></td>
                                        <td><t t-esc="case['trials']"/></td>
                                        <td><t t-esc="case['claim_amount']"/></td>
                                        <td>
                                            <span t-attf-class="badge-status #{case['case_status']}">
                                                <t t-esc="case['case_status']"/>
                                            </span>
                                        </td>
                                    </tr>
                                </t>

                                <t t-else="">
                                    <tr style="text-align:center">
                                        <td colspan="9">
                                            No data Available
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
