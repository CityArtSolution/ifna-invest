        <div class="row" style="margin-left: 2%;margin-right: 2%;">
            <div class="col-md-3 col-sm-6 tot_consultations oh-payslip">
                <div class="oh-card" style="width: 410px; border-radius: 10px; background-color: #e3f2fd;border: 2px solid #1e88e5">
                    <div class="oh-card-body tot_consultations" style="box-shadow: 5px 11px 30px rgba(0, 0, 0, 0.1); padding: 20px;">
                        <div class="stat-widget-one" style="display: flex; align-items: center;">
                            <div class="stat-icon" style="font-size: 30px; color: #1e88e5;"><i class="fa fa-puzzle-piece" /></div>
                            <div class="stat-head" style="padding-left: 10%; width: 60%; font-size: 18px; color: #1e88e5;">Total <br/> Consultations</div>
                            <div class="stat_count" style="padding-left: 10%; width: 30%; font-size: 24px; color: #0d47a1;" id="tot_consultations">
                                <t t-esc="widget.total_consultations" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 oh-payslip">
                <div class="oh-card" style="width: 410px; border-radius: 10px; background-color: #f1f8e9;border: 2px solid #43a047">
                    <div class="oh-card-body tot_client" style="box-shadow: 5px 11px 30px rgba(0, 0, 0, 0.1); padding: 20px;">
                        <div class="stat-widget-one" style="display: flex; align-items: center;">
                            <div class="stat-icon" style="font-size: 30px; color: #43a047;"><i class="fa fa-user" /></div>
                            <div class="stat-head" style="padding-left: 10%; width: 60%; font-size: 18px; color: #43a047;">Total <br/> Clients</div>
                            <div class="stat_count" style="padding-left: 10%; width: 30%; font-size: 24px; color: #1b5e20;" id="tot_client">
                                <t t-esc="widget.total_clients" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 oh-payslip">
                <div class="oh-card" style="width: 410px; border-radius: 10px; background-color: #fff8e1;border: 2px solid #fb8c00">
                    <div class="oh-card-body tot_auths_agens" style="box-shadow: 5px 11px 30px rgba(0, 0, 0, 0.1); padding: 20px;">
                        <div class="stat-widget-one" style="display: flex; align-items: center;">
                            <div class="stat-icon" style="font-size: 30px; color: #fb8c00;"><i class="fa fa-tasks" /></div>
                            <div class="stat-head" style="padding-left: 10%; width: 60%; font-size: 18px; color: #fb8c00;">Total <br/> Auths &amp; Agencies</div>
                            <div class="stat_count" style="padding-left: 10%; width: 30%; font-size: 24px; color: #e65100;" id="tot_auth_agen">
                                <t t-esc="widget.total_auths_agens" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 oh-payslip">
                <div class="oh-card" style="width: 410px; border-radius: 10px; background-color: #f3e5f5;border: 2px solid #8e24aa">
                    <div class="oh-card-body tot_decisions" style="box-shadow: 5px 11px 30px rgba(0, 0, 0, 0.1); padding: 20px;">
                        <div class="stat-widget-one" style="display: flex; align-items: center;">
                            <div class="stat-icon" style="font-size: 30px; color: #8e24aa;"><i class="fa fa-clock-o" /></div>
                            <div class="stat-head" style="padding-left: 10%; width: 60%; font-size: 18px; color: #8e24aa;">Total <br/> Board Decisions</div>
                            <div class="stat_count" style="padding-left: 10%; width: 30%; font-size: 24px; color: #4a148c;" id="tot_decisions">
                                <t t-esc="widget.total_decisions" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 oh-payslip">
                <div class="oh-card" style="width: 410px; border-radius: 10px; background-color: #e0f7fa; border: 2px solid #00acc1;">
                    <div class="oh-card-body tot_requests" style="box-shadow: 5px 11px 30px rgba(0, 0, 0, 0.1); padding: 20px;">
                        <div class="stat-widget-one" style="display: flex; align-items: center;">
                            <div class="stat-icon" style="font-size: 30px; color: #00acc1;"><i class="fa fa-calendar" /></div>
                            <div class="stat-head" style="padding-left: 10%; width: 60%; font-size: 18px; color: #00acc1;">Total <br/> Exec Requests</div>
                            <div class="stat_count" style="padding-left: 10%; width: 30%; font-size: 24px; color: #00838f;" id="tot_request">
                                <t t-esc="widget.total_requests" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

