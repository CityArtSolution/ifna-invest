<odoo>
    <data>
        <record model="ir.ui.view" id="rent_sale_order_inherit_form_increase">
            <field name="name">sale_order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="renting.rent_sale_order_inherit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='create_invoices_button']" position="after">
                    <button name="increase_policy" string="Increase Policy"
                            type="object" class="btn-primary"/>
                </xpath>
<!--                <xpath expr="//field[@name='partner_id']" position="after">-->
<!--                    <field name="increase_policy_lines"/>-->
<!--                </xpath>-->
                <xpath expr="//field[@name='order_line']/tree/field[@name='property_number']" position="before">
                    <field name="increase_policy"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="increase_amount"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>