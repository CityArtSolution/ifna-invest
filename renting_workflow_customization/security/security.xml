<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="group_pickup_rental_order" model="res.groups">
            <field name="name">Pickup Rental Order</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="finance_group" model="res.groups">
            <field name="name">Finance</field>
        </record>

        <record id="facility_group" model="res.groups">
            <field name="name">Facility</field>
        </record>

        <record id="ceo_group" model="res.groups">
            <field name="name">CEO</field>
        </record>

        <record id="pm_group" model="res.groups">
            <field name="name">PM</field>
            <!--            <field name="implied_ids" eval="[(4,0, [ref('sales_team.group_sale_salesman_all_leads')])]"/>-->
        </record>

        <record id="legal_group" model="res.groups">
            <field name="name">Legal</field>
        </record>

        <record id="see_ceo_rentals_only" model="ir.rule">
            <field name="name">see.ceo.rentals.only</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="domain_force">
                [('state', 'in', ('view_all_ceo_approve','ceo'))]
            </field>
            <field name="groups" eval="[(4, ref('renting_workflow_customization.ceo_group'))]"/>
            <field name="active" eval="False"/>
        </record>

        <record id="see_ceo_rentals_all" model="ir.rule">
            <field name="name">see.ceo.rentals.all</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="domain_force">
                [('state', 'not in', ('view_all_ceo_approve','ceo'))]
            </field>
            <!--            <field name="groups" eval="[(4, ref('renting_workflow_customization.ceo_group'))]"/>-->
            <field name="active" eval="False"/>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'base'), ('name', '=', 'res_partner_rule_private_employee')]"/>
            </function>
            <value eval="{'noupdate': False}"/>
        </function>
        <record model="ir.rule" id="base.res_partner_rule_private_employee">
            <field name="active" eval="False"/>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'base'), ('name', '=', 'res_partner_rule_private_employee')]"/>
            </function>
            <value eval="{'noupdate': True}"/>
        </function>


        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'base'), ('name', '=', 'res_partner_rule_private_group')]"/>
            </function>
            <value eval="{'noupdate': False}"/>
        </function>

        <record model="ir.rule" id="base.res_partner_rule_private_group">
            <field name="active" eval="False"/>
        </record>


        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'base'), ('name', '=', 'res_partner_rule_private_group')]"/>
            </function>
            <value eval="{'noupdate': True}"/>
        </function>

    </data>
</odoo>