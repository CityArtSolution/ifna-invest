<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_crossovered_budget_line_form_ifna">
            <field name="name">crossovered.budget.line.form</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="inherit_id" ref="account_budget.view_crossovered_budget_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='percentage']" position="before">
                    <field name="deviation_amount" attrs="{'readonly':[('crossovered_budget_state','!=','draft')]}"/>
                    <field name="deviation_ratio" widget="percentage" attrs="{'readonly':[('crossovered_budget_state','!=','draft')]}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="crossovered_budget_view_form_ifna">
            <field name="name">crossovered.budget.view.form</field>
            <field name="model">crossovered.budget</field>
            <field name="inherit_id" ref="account_budget.crossovered_budget_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='budget_lines']/field[@name='crossovered_budget_line']/tree/field[@name='percentage']" position="before">
                    <field name="deviation_amount"/>
                    <field name="deviation_ratio" widget="percentage"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_crossovered_budget_line_tree_ifna">
            <field name="name">crossovered.budget.line.tree</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="inherit_id" ref="account_budget.view_crossovered_budget_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='percentage']" position="before">
                    <field name="deviation_amount"/>
                    <field name="deviation_ratio" widget="percentage"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_crossovered_budget_line_pivot_ifna">
            <field name="name">crossovered.budget.line.pivot</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="inherit_id" ref="account_budget.view_crossovered_budget_line_pivot"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='percentage']" position="before">
                    <field name="deviation_amount" type="measure"/>
                    <field name="deviation_ratio" type="measure" widget="percentage"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>