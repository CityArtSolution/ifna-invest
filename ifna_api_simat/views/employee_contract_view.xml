<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ifna_employee_contract_inherit_view_form" model="ir.ui.view">
            <field name="name">ifna.employee.contract.inherit.view.form</field>
            <field name="model">employee.contract</field>
            <field name="inherit_id" ref="employee_contract.view_employee_contract_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_details']" position="after">
                    <group string="Extra Info">
                        <group>
                            <field name="external_id"/>
                            <field name="unit"/>
                            <field name="property"/>
                        </group>
                        <group>
                            <field name="tts_days"/>
                            <field name="payment_term"/>
                            <field name="price_amt"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>