<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ifna_res_partner_inherit_view_tree" model="ir.ui.view">
            <field name="name">ifna.res.partner.inherit.view.tree</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <xpath expr='//tree' position="inside">
                    <header>
                        <button name="fetch_and_update_clients" type="object" string="Fetch Clients" class="btn-primary"/>
                    </header>
                </xpath>
            </field>
        </record>

        <record id="ifna_res_partner_inherit_view_form" model="ir.ui.view">
            <field name="name">ifna.res.partner.inherit.view.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div class="oe_title mb24" position="after">
                    <field name="is_main_api_view" invisible="1"/>
                    <group string="API Extra Client Details" attrs="{'invisible': [('is_main_api_view', '=', False)]}">
                        <group>
                            <field name="is_api_client" widget="boolean_toggle"/>
                            <field name="entity_idtype"/>
                            <field name="entity_number"/>
                        </group>
                        <group>
                            <field name="external_id"/>
                            <field name="entity_type"/>
                            <field name="client_tax_code"/>
                        </group>
                    </group>
                    <br/>
                    <br/>
                </div>
            </field>
        </record>

        <record id="ifna_res_partner_inherit_view_search" model="ir.ui.view">
            <field name="name">ifna.res.partner.inherit.view.search</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <filter name="type_person" position="before">
                    <filter string="API Client" name="is_api_client" domain="[('is_api_client', '=', True)]"/>
                    <separator/>
                </filter>
            </field>
        </record>
  </data>
</odoo>