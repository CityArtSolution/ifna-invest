        <record id="report_invoices_without_table_report" model="ir.actions.report">
            <field name="name">Invoices abnaa</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">invoice_report_edit.report_invoices_without_table</field>
            <field name="report_file">invoice_report_edit.report_invoices_without_table</field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
