            <t t-call="web.basic_layout">
                <div class="page" style="font-family:Cambria!important;">

                    <div class="row" style="align:right;float:right;">
                        <div class="col-10">
                            <div class="col-6">
                                <table class="table table-sm table-borderless">
                                    <colgroup>
                                        <col width='50%'/>
                                        <col width='50%'/>
                                    </colgroup>
                                    <tbody>
                                        <tr>
                                            <td style="text-align: left;padding:0px">
                                                <span>Ref:</span>
                                            </td>
                                            <td style="text-align: left;vertical-align: middle;padding:0px">
                                                <strong t-field="o.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: left;padding:0px">
                                                <span>Date:</span>
                                            </td>
                                            <td style="text-align: left;vertical-align: middle;padding:0px">
                                                <strong t-field="o.invoice_date"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <!-- customer info -->
                    <div class="row">
                        <div class="col-6">
                            <table class="table table-sm table-borderless">
                                <colgroup>
                                    <col width='30%'/>
                                    <col width='40%'/>
                                    <col width='30%'/>
                                </colgroup>
                                <tbody>
                                    <tr>
                                        <td style="text-align:left;padding:0px;">
                                            <b>
                                                <i>
                                                    <span t-field="o.partner_id.name"/>
                                                </i>
                                            </b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:left;padding:0px;">
                                            <span t-field="o.partner_id.city"/>,
                                            <span t-field="o.partner_id.country_id.name"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <br/>

                    <h3>
                        <div>
                            <div style="text-align:center; align:center">
                                <span style="color:red;border-bottom: 3px double; text-align: center;">
                                    Invoice
                                </span>
                            </div>
                        </div>
                    </h3>

                    <br/>
                    <table class="table table-sm table-borderless">
                        <colgroup>
                            <col width='70%'/> <!--Description-->
                            <col width='30%'/> <!--Unit Price-->
                        </colgroup>
                        <tbody class="invoice_tbody">
                            <t t-set="total_amount" t-value="0"/>
                            <tr t-foreach="o.invoice_line_ids" t-as="l">
                                <td class="text-left">
                                    <span t-field="l.product_id.property_id.property_address_area.name"/>,<span
                                        t-field="l.product_id.property_id.property_name"/>(<span
                                        t-field="l.product_id.rent_config_unit_finish_id.unit_finish_name"/>)
                                    <br/>
                                    <span t-field="l.product_id.name"/>
                                    <br/>
                                    <span t-field="l.product_id.description_sale"/>,
                                </td>
                                <td class="text-left">
                                    <span t-field="l.price_unit" t-field-options='{"widget": "monetary"}'/>
                                </td>
                                <t t-set="total_amount" t-value="total_amount + l.price_subtotal"/>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-10">
                            <table class="table table-borderless">
                                <colgroup>
                                    <col width='80%'/>
                                    <col width='20%'/>
                                </colgroup>
                                <tr>
                                    <td class="text-left"
                                        style="direction: ltr;padding:0px;border-top: none!important">
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-center"
                                        style="padding:0px;border-top: 1px dashed; border-bottom: 3px double;">
                                        <strong>
                                            <span t-esc="'{0:,.2f}'.format(total_amount)"/>
                                        </strong>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-10">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="text-left" colspan="3">
                                        <t t-set="amo1" t-value="o._convert_num_to_text(total_amount)"/>
                                        <strong>Amount Due:</strong>
                                        <u>
                                            <strong t-esc="amo1"/>
                                        </u>
                                    </td>
                                </tr>
                                <br/>
                                <tr>
                                    <td class="text-left" colspan="3">
                                        <i>*** Security Deposit will be non-refundable if you cancel
                                            reservation***
                                        </i>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row" style="float:right;">
                        <div class="col-20">
                            <table class="table table-sm table-borderless">
                                <tbody>
                                    <tr>
                                        <td style="text-align: left;padding:0px">
                                            <strong>Mazen Alhaffar</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: left;padding:0px">
                                            <span>Compounds Manager</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: left;padding:0px">
                                            <span>Property Division</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <br/>

                    <div class="row">
                        <div class="col-10">
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td class="text-left" colspan="3">
                                        <strong>NOTE:</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" colspan="3">
                                        <strong style="color:red;">***PLEASE ISSUE THE CHEQUE PAYABLE TO Hussein
                                            Alireza
                                            Sons CO. LTD
                                        </strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" colspan="3">
                                        <strong style="color:blue;">***IF PAYING BY TRANSFER IT IS ESSENTIAL THAT
                                            YOU EMAIL
                                            A COPY OF THE BANK TRANSFER TO property@hha.com.sa
                                        </strong>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <br/>
                    <div class="row">
                        <div class="col-10">
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td class="text-left" colspan="3">
                                        <span>ACCOUNT NO:</span>
                                    </td>
                                    <td class="text-left" colspan="3">
                                        <span t-field="o.company_id.partner_id.bank_ids[0].acc_number"/>,
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" colspan="3">
                                        <span>IBAN NUMBER:</span>
                                    </td>
                                    <td class="text-left" colspan="3">
                                        <span t-field="o.company_id.partner_id.bank_ids[0].bank_id.iban"/>,

                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" colspan="3">
                                        <span>Name:</span>
                                    </td>
                                    <td class="text-left" colspan="3">
                                        <span t-field="o.company_id.partner_id.bank_ids[0].bank_id.name"/>,

                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" colspan="3">
                                        <span>Bank:</span>
                                    </td>
                                    <td class="text-left" colspan="3">
                                        <span t-field="o.company_id.partner_id.bank_ids[0].partner_id.name"/>,
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </t>

