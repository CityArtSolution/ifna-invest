<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="external_layout_boxed" inherit_id="web.external_layout_boxed" primary="True">
            <xpath expr="//div[hasclass('o_boxed_header')]" position="replace">
                <div class="o_boxed_header">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-8" style="text-align:left;font-weight: bolder;font-size:22px">
                                    <span t-esc="company.name"></span>
                                </div>
                                <div class="col-4" style="text-align:left;">

                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-8" style="text-align:left;font-weight: bolder;">Vat Number:
                                    <span t-esc="company.vat"></span>
                                </div>
                                <div class="col-4" style="text-align:left;">

                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-6" style="text-align:left;font-weight: bolder;">Email:
                                    <span t-esc="company.email"></span>
                                </div>
                                <div class="col-6" style="text-align:left;">

                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-6" style="text-align:left;font-weight: bolder;">Tel:
                                    <span t-esc="company.phone"></span>
                                </div>
                                <div class="col-6" style="text-align:left;">

                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-12" style="text-align:left;">
                                    <strong>
                                        <span t-esc='company.partner_id'
                                              t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')"
                                              class="add address-inline"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-2"></div>
                        <div class="col-5" style="padding-right:0px">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                                 style="margin-left:140px;max-height: 200px;" alt="Logo"/>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@t-attf-class='footer o_boxed_footer o_company_#{company.id}_layout']"
                   position="replace">
                <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                    <div class="text-center" style="padding:0px;font-size: small;border-top: 1px solid black;">
                        <ul class="list-inline mb4" style="padding:0px;">
                            <li>
                                <strong>
                                    <span class="o_force_rtl">إسم الحساب :
                                        <t t-esc="company.partner_id.bank_ids[0].acc_holder_name"></t>
                                    </span>
                                </strong>
                            </li>
                            <br/>
                            <li>
                                <strong>
                                    <span class="o_force_rtl">إسم البنك :
                                        <t t-esc="company.partner_id.bank_ids[0].bank_id.name"></t>
                                    </span>
                                </strong>
                            </li>
                            <br/>
                            <li>
                                <strong>
                                    <span class="o_force_rtl">
                                        <t t-esc="company.partner_id.bank_ids[0].iban"></t>
                                        :
                                        رقم الآيبان البنكي

                                    </span>
                                </strong>
                            </li>
                            <br/>
                            <li>
                                <strong>
                                    <span class="o_force_rtl">رقم الحساب :
                                        <t t-esc="company.partner_id.bank_ids[0].acc_number"></t>
                                    </span>
                                </strong>
                            </li>

                        </ul>
                    </div>
                </div>
            </xpath>
        </template>
        <template id="report_invoice_new"
                  inherit_id="l10n_gcc_invoice.arabic_english_invoice">
            <xpath expr="//div[@name='invoice_date']" position="replace">
                <div id="informations" style="margin-left: 15px;margin-right: 15px;">
                    <div class="row">
                        <div class="col-1"></div>
                        <div class="col-8">
                            <div class="row" t-if="o.name" name="inv_name">
                                <div class="col-4">
                                    <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;white-space:nowrap">
                                        Invoice Number:
                                    </strong>
                                </div>
                                <div class="col-4 text-center">
                                    <span t-if="o.name != '/'" t-field="o.name"/>
                                </div>
                                <div class="col-4 text-right">
                                    <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;white-space:nowrap">
                                        :
                                        رقم الفاتورة
                                    </strong>
                                </div>
                            </div>
                            <div class="row" t-if="o.invoice_date" name="invoice_date">
                                <div class="col-4">
                                    <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;white-space:nowrap">
                                        Invoice Date:
                                    </strong>
                                </div>
                                <div class="col-4 text-center">
                                    <span t-field="o.invoice_date"/>
                                </div>
                                <div class="col-4 text-right">
                                    <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;white-space:nowrap">
                                        :
                                        تاريخ الفاتورة
                                    </strong>
                                </div>
                            </div>
                            <div class="row"
                                 t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'"
                                 name="due_date">
                                <div class="col-4">
                                    <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;white-space:nowrap">
                                        Due Date:
                                    </strong>
                                </div>
                                <div class="col-4 text-center">
                                    <span t-field="o.invoice_date_due"/>
                                </div>
                                <div class="col-4 text-right">
                                    <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;white-space:nowrap">
                                        :
                                        تاريخ الاستحقاق
                                    </strong>
                                </div>
                            </div>
                            <!--                            <div class="row" t-if="o.l10n_sa_delivery_date" name="delivery_date">-->
                            <!--                                <div class="col-4">-->
                            <!--                                    <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;white-space:nowrap">-->
                            <!--                                        Delivery Date:-->
                            <!--                                    </strong>-->
                            <!--                                </div>-->
                            <!--                                <div class="col-4 text-center">-->
                            <!--                                    <span t-field="o.l10n_sa_delivery_date"/>-->
                            <!--                                </div>-->
                            <!--                                <div class="col-4 text-right">-->
                            <!--                                    <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;white-space:nowrap">-->
                            <!--                                        :-->
                            <!--                                        تاريخ التوصيل-->
                            <!--                                    </strong>-->
                            <!--                                </div>-->
                            <!--                            </div>-->
                            <div class="row" t-if="o.invoice_origin" name="origin">
                                <div class="col-4">
                                    <strong style="white-space:nowrap">Source:
                                    </strong>
                                </div>
                                <div class="col-4 text-center">
                                    <span t-field="o.invoice_origin"/>
                                </div>
                                <div class="col-4 text-right">
                                    <strong style="white-space:nowrap">:
                                        المصدر
                                    </strong>
                                </div>
                            </div>

                        </div>
                        <div class="col-3" colspan="5" name="qr_code">
                            <img t-if="o.l10n_sa_qr_code_str" style="display:block;margin: auto;"
                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_sa_qr_code_str, 100, 100)"/>
                        </div>
                    </div>
                    <div class="col-auto mw-100 mb-4" t-if="o.ref" name="reference">
                        <div class="col-4">
                            <strong style="white-space:nowrap">Reference:
                            </strong>
                        </div>
                        <div class="col-4">
                            <span t-field="o.ref"/>
                        </div>
                        <div class="col-4 text-right">
                            <strong style="white-space:nowrap">:
                                رقم الإشارة
                            </strong>
                        </div>
                    </div>
                </div>
                <style>
                    div.round {
                    border-radius: 35px;
                    white-space: nowrap;
                    direction: rtl;
                    background-color: #e7edef;
                    display: block;
                    padding: 25px;
                    margin: 25px;
                    }
                </style>
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-9 round">
                        <div class="customer">
                            <div class="row">
                                <span>اسم العميل:</span>
                                <span t-field="o.partner_id.name"/>
                            </div>
                            <div class="row">
                                <span>الرقم الضريبي:</span>
                                <span t-field="o.partner_id.vat"/>
                            </div>
                            <div class="row">
                                <span>كود العميل:</span>
                                <span t-field="o.partner_id.ref"/>
                            </div>
                            <div class="row">
                                <span>عنوان العميل:</span>
                                <span t-esc='o.with_context(lang="ar_001").partner_id'
                                      t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')"
                                      class="add address-inline"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-2"></div>
                </div>
            </xpath>

            <xpath expr="//table[@name='invoice_line_table']" position="replace">
                <table class="border table table-sm o_main_table" style="margin-top: 5px;direction: rtl;"
                       name="invoice_line_table">
                    <thead>
                        <tr style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;">
                            <t t-set="colspan" t-value="10"/>
                            <th name="th_description" class="border text-right">
                                <span>
                                    Description
                                </span>
                                <br/>
                                <span>
                                    الوصف
                                </span>
                            </th>
                            <th t-if="o.env.user.has_group('bstt_account_invoice.group_show_product_code')"
                                name="th_internal_reference" class="border text-left">
                                <span>
                                    Code
                                </span>
                                <br/>
                                <span>
                                    الكود
                                </span>
                            </th>
                            <th name="th_source" class="border d-none text-left" t-if="0">
                                <span>
                                    Source Document
                                </span>
                                <br/>
                                <span>
                                    المستند المصدر
                                </span>
                            </th>
                            <th name="th_quantity" class="border text-right">
                                <span>
                                    Quantity
                                </span>
                                <br/>
                                <span>
                                    الكمية
                                </span>
                            </th>
                            <th name="th_priceunit" class="border text-right">
                                <span>
                                    Unit price
                                </span>
                                <br/>
                                <span>
                                    سعر الوحدة
                                </span>
                            </th>
                            <th name="th_price_unit" t-if="display_discount" class="border text-right">
                                <span>
                                    Disc.%
                                </span>
                                <br/>
                                <span>
                                    خصم %
                                </span>
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <th name="th_taxes" class="border text-right">
                                <span>
                                    Taxes
                                </span>
                                <br/>
                                <span>
                                    الضرائب
                                </span>
                            </th>
                            <th name="th_subtotal" class="border text-right">
                                <span>
                                    Amount
                                </span>
                                <br/>
                                <span>
                                    مبلغ
                                </span>
                            </th>
                            <th name="border th_tax_amount" class="text-right">
                                <span>
                                    VAT Amount
                                </span>
                                <br/>
                                <span>
                                    قيمة الضريبة
                                </span>
                            </th>
                            <th name="th_total" class="border text-right">
                                <span>
                                    Total Price
                                </span>
                                <br/>
                                <span>
                                    السعر الاجمالي
                                </span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines"
                           t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>


                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr style="font-size: 16.0092px; font-family: sans-serif;" class="border"
                                t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td class="border text-right" name="account_invoice_line_name">
                                        <span t-field="line.product_id.name" t-options="{'widget': 'text'}"/>
                                        <t t-if="line.product_id.name">
                                            <br/>
                                            <span t-field="line.product_id.name"
                                                  t-options="{'widget': 'text'}"/>
                                        </t>
                                    </td>
                                    <td t-if="o.env.user.has_group('bstt_account_invoice.group_show_product_code')"
                                        class="border text-right">
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td class="border text-right">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </td>
                                    <td class="border text-right">
                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="border text-right">
                                        <span class="text-nowrap" t-field="line.discount"/>
                                    </td>
                                    <td class="border text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"
                                              id="line_tax_ids"/>
                                    </td>
                                    <td class="border text-right o_price_total">
                                        <span class="text-nowrap" t-field="line.price_subtotal"/>
                                    </td>
                                    <td class="border text-right">
                                        <span class="text-nowrap" t-field="line.l10n_gcc_invoice_tax_amount"/>
                                    </td>
                                    <td class="border text-right o_price_total" style="background: #D3D8D7">
                                        <span class="text-nowrap" t-field="line.price_total"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td class="border" colspan="99" style="background: #D3D8D7">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td class="border" colspan="99" style="background: #D3D8D7">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="border is-subtotal text-right" style="background: #D3D8D7  !important;">
                                    <td cclass="border" olspan="99" style="background: #D3D8D7  !important;">
                                        <strong class="mr16" style="display: inline-block">Subtotal/الإجمالي الفرعي
                                        </strong>
                                        <span t-esc="current_subtotal"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </xpath>

            <xpath expr="//div[@id='total']" position="replace">
                <!-- Add your fields or attributes here -->
                <div id="total" class="row">
                    <div class="col-6">
                        <table class="table table-sm"
                               style=" border: 1px solid black;border-collapse: collapse;page-break-inside: avoid;">
                            <tr class="border-black o_subtotal">
                                <td>
                                    <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;">
                                        Subtotal
                                        /
                                        الإجمالي الفرعي
                                    </strong>
                                </td>
                                <td class="text-right">
                                    <span style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;"
                                          t-field="o.amount_untaxed"/>
                                </td>
                            </tr>
                            <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                <t t-call="account.tax_groups_totals"/>
                            </t>
                            <tr class="border-black o_total">
                                <td style="background-color:#b1c9b8;">
                                    <strong style="font-size: 16.0092px; font-family: sans-serif;color:white;">
                                        Total
                                        /
                                        المجموع
                                    </strong>
                                </td>
                                <td style="background-color:#b1c9b8;" class="text-right">
                                    <span style="font-size: 16.0092px; font-family: sans-serif;color:white;"
                                          class="text-nowrap" t-field="o.amount_total"/>
                                </td>
                            </tr>

                            <t t-if="print_with_payments">
                                <t t-if="o.payment_state != 'invoicing_legacy'">
                                    <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                    <t t-foreach="payments_vals" t-as="payment_vals">
                                        <tr class="border-black o_total">
                                            <td>
                                                <i class="row">
                                                    <div class="col-7 oe_form_field oe_payment_label">
                                                        Paid on/دفعت في:
                                                    </div>
                                                    <div class="col-5 pl-0 oe_form_field oe_payment_label">
                                                        <t t-out="payment_vals['date']"/>
                                                    </div>
                                                </i>
                                            </td>
                                            <td class="text-right">
                                                <span t-out="payment_vals['amount']"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="len(payments_vals) > 0">
                                        <tr class="border-black">
                                            <td>
                                                <strong>
                                                    Amount Due
                                                    /
                                                    المبلغ المستحق
                                                </strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.amount_residual"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </table>
                    </div>
                </div>

            </xpath>
        </template>

        <template id="arabic_english_invoice" inherit_id="l10n_sa_invoice.arabic_english_invoice">
            <xpath expr="//div[@name='delivery_date']" position="replace">
                <div class="row" t-if="o.l10n_sa_delivery_date" name="delivery_date">
                    <div class="col-4">
                        <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;white-space:nowrap">
                            Delivery Date:
                        </strong>
                    </div>
                    <div class="col-4 text-center">
                        <span t-field="o.l10n_sa_delivery_date"/>
                    </div>
                    <div class="col-4 text-right">
                        <strong style="font-size: 16.0092px; font-family: sans-serif;color:#b1c9b8;white-space:nowrap">
                            :
                            تاريخ التوصيل
                        </strong>
                    </div>
                </div>
            </xpath>

            <xpath expr="//t[@t-set='address']" position="after">
                <t t-set="information_block">
                    <p>
                        <img t-if="o.l10n_sa_qr_code_str"
                             style="display:block;"
                             t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_sa_qr_code_str, 130, 130)"/>
                    </p>
                </t>
            </xpath>
        </template>

    </data>
</odoo>