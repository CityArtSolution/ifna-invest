<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="external_layout_boxed" inherit_id="web.external_layout_boxed" primary="True">
            <xpath expr="//div[hasclass('o_boxed_header')]" position="replace">
                <div class="o_boxed_header">
                    <div class="row">
                        <div class="col-6">
                        <div class="row">
                                <div class="col-8" style="text-align:left;font-weight: bolder;"><span t-esc="company.name"></span></div>
                                <div class="col-4" style="text-align:left;">
                                    
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-8" style="text-align:left;font-weight: bolder;">Vat Number: <span t-esc="company.vat"></span></div>
                                <div class="col-4" style="text-align:left;">
                                    
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-6" style="text-align:left;font-weight: bolder;">Email: <span t-esc="company.email"></span></div>
                                <div class="col-6" style="text-align:left;">
                                    
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-6" style="text-align:left;font-weight: bolder;">Tel: <span t-esc="company.phone"></span></div>
                                <div class="col-6" style="text-align:left;">
                                    
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-12" style="text-align:left;">
                                    <strong><span t-esc='company.partner_id' t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')" class="add address-inline"/></strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-2"></div>
                        <div class="col-5" style="padding-right:0px">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="margin-left:120px;max-height: 150px;" alt="Logo"/>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@t-attf-class='footer o_boxed_footer o_company_#{company.id}_layout']" position="replace">
                <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                    <div class="text-center" style="font-size: small;border-top: 1px solid black;">
                        <ul class="list-inline mb4">
                             <li>
                                <strong>
                                    <span class="o_force_rtl">إسم الحساب : <t t-esc="company.partner_id.bank_ids[0].acc_holder_name"></t>
                                    </span>
                                </strong>
                            </li>
                            <li>
                                <strong>
                                    <span class="o_force_rtl">إسم البنك : <t t-esc="company.partner_id.bank_ids[0].bank_id.name"></t>
                                    </span>
                                </strong>
                            </li>
                            <li>
                                <strong>
                                    <span class="o_force_rtl">رقم الآيبان البنكي : <t t-esc="company.partner_id.bank_ids[0].iban"></t>
                                    </span>
                                </strong>
                            </li>
                             <li>
                                <strong>
                                    <span class="o_force_rtl">رقم الحساب : <t t-esc="company.partner_id.bank_ids[0].acc_number"></t>
                                    </span>
                                </strong>
                            </li>
                                          
                        </ul>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>