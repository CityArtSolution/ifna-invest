<odoo>
    <data>

        <record id="crm_lead_form_inherit" model="ir.ui.view">
            <field name="name">crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="property"/>
                    <field name="unit"/>
                    <field name="date"/>
                </xpath>
            </field>
        </record>

        <record id="crm_lead_tree_inherit" model="ir.ui.view">
            <field name="name">crm.lead.tree</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="property"/>
                    <field name="unit" />
                    <field name="date"/>
                </xpath>
            </field>
        </record>

        <record id="crm_lead_kanban_inherit" model="ir.ui.view">
            <field name="name">crm.lead.kanban</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">

                    <div>
                        <field name="property"/>
                    </div>
                    <div>
                        <field name="unit"/>
                    </div>
                    <div>
                        <field name="date"/>
                    </div>
                    <div>
                        <field name="source_id"/>
                    </div>
]                </xpath>
            </field>
        </record>

    </data>
</odoo>