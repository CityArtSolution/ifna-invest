<odoo>
    <data>

        <record model="ir.ui.view" id="rent_product_product_inherit_area">
            <field name="name">product_product</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="renting.rent_product_product_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='entry_number']" position="before">
                    <field name="rent_unit_area"/>
                    <field name="rent_unit_area_price"/>
                </xpath>
                <xpath expr="//field[@name='price']" position="replace">
                    <field name="price" groups="area_meter.rental_pricing_manager"/>
                </xpath>
                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <field name="service_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="rent_product_inherit_area">
            <field name="name">product_template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="renting.rent_product_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='entry_number']" position="before">
                    <field name="rent_unit_area"/>
                    <field name="rent_unit_area_price"/>
                </xpath>
                <xpath expr="//field[@name='price']" position="replace">
                    <field name="price" groups="area_meter.rental_pricing_manager"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="rent_sale_order_inherit_form_area">
            <field name="name">sale_order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_renting.rental_order_primary_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='is_rental']"
                       position="after">
                    <field name="rent_unit_area"/>
                    <field name="rent_unit_area_price"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="rent_wizard_inherit_form_area">
            <field name="name">rental.wizard.config</field>
            <field name="model">rental.wizard</field>
            <field name="inherit_id" ref="sale_renting.rental_configurator_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='rental_pricing']" position="after">
                    <group>
                        <label for="rent_unit_area"/>
                        <div name="rent_unit_area">
                            <field name="rent_unit_area" class="oe_inline col-lg-3 text-left pl-0"/>
                        </div>
                        <label for="rent_unit_area_price"/>
                        <div>
                            <field name="rent_unit_area_price" class="oe_inline col-lg-3 text-left pl-0"/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>