<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_contract_tag_tree" model="ir.ui.view">
            <field name="name">employee.contract.tag.tree</field>
            <field name="model">employee.contract.tag</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Employee Contracts Tag">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="action_employee_contract_tag" model="ir.actions.act_window">
            <field name="name">Employee Contracts Tag</field>
            <field name="res_model">employee.contract.tag</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_employee_contract_root" name="Contract" sequence="10"/>
        <menuitem id="menu_employee_contract_configuration" name="Configurations" parent="menu_employee_contract_root" sequence="2"/>
        <menuitem id="menu_employee_contract_tag" name="Employee Contract Tag" parent="menu_employee_contract_configuration" action="action_employee_contract_tag" sequence="1"/>
    </data>
</odoo>