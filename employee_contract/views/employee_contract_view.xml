<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_contract_tree" model="ir.ui.view">
            <field name="name">employee.contract.tree</field>
            <field name="model">employee.contract</field>
            <field name="arch" type="xml">
                <tree string="Employee Contracts">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="date"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="stage_id" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_employee_contract_kanban" model="ir.ui.view">
            <field name="name">employee.contract.kanban</field>
            <field name="model">employee.contract</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column o_opportunity_kanban" examples="ifna" sample="1" quick_create="false" group_create="false">
                    <field name="stage_id"/>
                    <field name="name"/>
                    <field name="active"/>
                    <field name="tag_ids"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="user_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div>
                                        <span class="o_form_label fw-bold me-2">Tags:</span>
                                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>
                                    <div>
                                        <span class="o_form_label fw-bold me-2">Amount:</span>
                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </div>
                                    <br/>
                                    <div class="o_kanban_record_bottom border-top pt-2">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="user_id" widget="many2one_avatar_user"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <div class="o_kanban_inline_block">
                                                <field name="create_date"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_employee_contract_form" model="ir.ui.view">
            <field name="name">employee.contract.form</field>
            <field name="model">employee.contract</field>
            <field name="arch" type="xml">
                <form string="Employee Contract">
                    <header>
                        <field name="stage_id" widget="statusbar" class="o_field_statusbar"
                            options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <div class="oe_title mb24">
                            <field name="active" invisible="1"/>
                            <h1>
                                <field id="name" class="text-break" name="name" default_focus="1" placeholder="e.g. Lumber Inc"/>
                            </h1>
                        </div>
                        <group name="main_details">
                            <group>
                                <field name="partner_id"/>
                                <field name="phone" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="date"/>
                                <label string="Dates" for="date_start"/>
                                <div class="o_row">
                                  <field name="date_start" placeholder="Date Start"/>
                                  <span> to </span>
                                  <field name="date_stop" placeholder="Date Stop"/>
                                </div>
                            </group>
                            <group>
                                <field name="user_id" widget="many2one_avatar_user"/>
                                <field name="currency_id"/>
                                <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="tag_ids"  widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <br/>
                        <br/>
                        <field name="description" placeholder="Type down your notes here ..." widget="html"/>
                        <notebook>
                            <page string="Details" name="details">
                                <field name="employee_contract_line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name" string="Description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_employee_contract_search" model="ir.ui.view">
            <field name="name">employee.contract.search</field>
            <field name="model">employee.contract</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="date"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <filter string="Archive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Responsible" name="group_by_user" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter string="Company" name="group_by_company_id" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_employee_contract_pivot" model="ir.ui.view">
            <field name="name">employee.contract.pivot</field>
            <field name="model">employee.contract</field>
            <field name="arch" type="xml">
                <pivot string="Employee Contracts">
                    <field name="date" type="row"/>
                    <field name="stage_id" type="col"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Calendar View -->
        <record id="view_employee_contract_calendar" model="ir.ui.view">
            <field name="name">employee.contract.calendar</field>
            <field name="model">employee.contract</field>
            <field name="arch" type="xml">
                <calendar string="Employee Contracts" date_start="date_start" date_stop="date_stop">
                    <field name="name"/>
                    <field name="stage_id"/>
                </calendar>
            </field>
        </record>

        <!-- Gantt View -->
        <record id="view_employee_contract_gantt" model="ir.ui.view">
            <field name="name">employee.contract.gantt</field>
            <field name="model">employee.contract</field>
            <field name="arch" type="xml">
                <gantt string="Employee Contracts" date_start="date_start" date_stop="date_stop" default_group_by="stage_id">
                    <field name="name"/>
                    <field name="stage_id"/>
                    <field name="user_id"/>
                </gantt>
            </field>
        </record>

        <!-- Graph View -->
        <record id="view_employee_contract_graph" model="ir.ui.view">
            <field name="name">employee.contract.graph</field>
            <field name="model">employee.contract</field>
            <field name="arch" type="xml">
                <graph string="Employee Contracts" type="bar">
                    <field name="amount" type="measure"/>
                    <field name="stage_id" type="row"/>
                </graph>
            </field>
        </record>


        <record id="action_employee_contract" model="ir.actions.act_window">
            <field name="name">Employee Contracts</field>
            <field name="res_model">employee.contract</field>
            <field name="view_mode">tree,form,kanban,calendar,pivot,gantt,graph</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first employee contract
                </p>
        </field>
        </record>

        <menuitem id="menu_employee_contract_root" name="Contract" sequence="10"/>
        <menuitem id="menu_employee_contract" name="Employee Contracts" parent="menu_employee_contract_root" action="action_employee_contract" sequence="1"/>
    </data>
</odoo>