<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_contract_stage_tree" model="ir.ui.view">
            <field name="name">employee.contract.stage.tree</field>
            <field name="model">employee.contract.stage</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Employee Contracts Stage">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="action_employee_contract_stage" model="ir.actions.act_window">
            <field name="name">Employee Contracts Stage</field>
            <field name="res_model">employee.contract.stage</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_employee_contract_root" name="Contract" sequence="10"/>
        <menuitem id="menu_employee_contract_configuration" name="Configurations" parent="menu_employee_contract_root" sequence="2"/>
        <menuitem id="menu_employee_contract_stage" name="Employee Contract Stage" parent="menu_employee_contract_configuration" action="action_employee_contract_stage" sequence="2"/>
    </data>
</odoo>