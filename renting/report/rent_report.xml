<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!-- Inherit Form View to Modify it -->
        <record id="sale_rental_configurator_form_view" model="ir.ui.view">
            <field name="name">sale.rental.configurator</field>
            <field name="model">rental.wizard</field>
            <field name="inherit_id" ref="sale_renting.rental_configurator_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='rental_specs']" position="after">
                    <group>
                     <div class="o_row">
                         <field name="hijri_pickup_day"/>
                         <field name="hijri_pickup_month"/>
                         <field name="hijri_pickup_year"/>
                         to
                         <field name="hijri_return_day"/>
                         <field name="hijri_return_month"/>
                         <field name="hijri_return_year"/>

<!--                        <field name="hijri_pickup_date" widget="hijri" options="{'related_georgian_date':'geo_pickup_date'}"/>-->
<!--                         <field name="geo_pickup_date" invisible="1"/>-->
<!--                        <span> to </span>-->
<!--                        <field name="hijri_return_date" widget="hijri" options="{'related_georgian_date':'geo_return_date'}"/>-->
<!--                        <field name="geo_return_date" invisible="1"/>-->

                    </div>
                   </group>
                </xpath>
            </field>

        </record>

        <record id="sale_rental_report_new_form_view" model="ir.ui.view">
            <field name="name">sale.rental.report.new.pivot</field>
            <field name="model">sale.rental.report</field>
            <field name="inherit_id" ref="sale_renting.rental_report_pivot_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='price']" position="after">
                    <field name="property_id" type="measure"/>
                    <field name="state_id" type="row"/>
                    <field name="property_address_build" type="measure"/>
                    <field name="property_address_city" type="measure"/>
                    <field name="country" type="measure"/>
                    <!-- Add your fields or attributes here -->
                </xpath>

            </field>
        </record>
    </data>
</odoo>