        <record model="ir.ui.view" id="rent_sale_order_inherit_form_pickup">
            <field name="name">sale_order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_renting.rental_order_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='open_pickup']" position="replace">
                    <button name="open_pickup" type="object" class="btn-primary" string="PICKUP" data-hotkey="y"
                            groups="renting_workflow_customization.finance_group"
                            attrs="{'invisible':['|', ('has_pickable_lines','=',False), ('state', 'not in', ['sale', 'done'])]}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="rent_sale_order_inherit_form">
            <field name="name">sale_order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_renting.rental_order_primary_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="duplicate">0</attribute>
                </xpath>

                <xpath expr="//button[@name='action_quotation_send']" position="before">
                    <button name="action_pickup" type="object" class="btn-primary" string="PICKUP"
                            groups="renting_workflow_customization.finance_group"
                            attrs="{'invisible':['|', ('rental_status','not in',['returned','cancel']), ('state', 'not in', ['sale', 'done'])]}"/>
                </xpath>

                <xpath expr="//button[@name='open_pickup']" position="after">
                    <button name="create_invoices_button" string="Create Invoices" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'sale'),('is_rental_order', '=', True)]}"
                            groups="renting_workflow_customization.finance_group"
                    />
                </xpath>

                <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][1]" position="replace">
                    <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                            type="action" class="btn-primary" invisible="1"/>
                </xpath>
                <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][2]" position="replace">
                    <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                            type="action" context="{'default_advance_payment_method': 'percentage'}" invisible="1"/>
                </xpath>
                <!--                <xpath expr="//button[@name='action_cancel']" position="replace">-->
                <!--                    <button name="action_cancel" type="object" string="Cancel"-->
                <!-- attrs="{'invisible': ['|','|', ('state', 'not in', ['draft', 'sent','sale']), ('id', '=', False), ('no_of_invoiced', '>', 0)]}"/>-->
                <!--                    <field name="no_of_invoiced" invisible="1"/>-->
                <!--                </xpath>-->
                <xpath expr="// field [@ name = 'order_line'] / tree / field [@ name = 'name']" position="after">
                    <field name="is_rental" optional="hide"/>
                    <!--                    <field name="rent_ok"/>-->
                    <field name="rental_pricing_id"
                           attrs="{'invisible':[('is_rental','=', False)],'required':[('is_rental','=', True)]}"
                           options="{'no_create_edit': True}"/>
                </xpath>
                <xpath expr="// field [@ name = 'order_line'] / tree / field [@ name = 'tax_id']" position="after">
                    <field name="insurance_value" optional="hide"/>

                    <button name="action_get_service" class="oe_highlight" type="object" string="Get Services"
                            attrs="{'invisible':['|',('is_rental','=', False),('rental_pricing_id','=', False)]}"/>
                    <field name="contract_admin_fees" optional="hide"/>
                    <field name="contract_service_fees" optional="hide"/>
                    <field name="contract_admin_sub_fees" optional="hide"/>
                    <field name="contract_service_sub_fees" optional="hide"/>
                </xpath>
                <xpath expr="// field [@ name = 'order_line'] / tree / field [@ name = 'product_id']" position="after">
                    <field name="analytic_account" optional="hide"/>
                </xpath>
                <xpath expr="// field [@ name = 'order_line'] / tree / field [@ name = 'product_id']" position="before">
                    <field name="property_number"/>
                    <field name="property_analytic_account" optional="hide"/>
                    <field name="pickup_date" invisible="1" force_save="1"/>
                    <field name="return_date" invisible="1" force_save="1"/>
                </xpath>

                <xpath expr="// field [@ name = 'order_line'] / tree / field [@ name = 'product_id']"
                       position="attributes">
                    <!--                    <attribute name="domain">-->
                    <!-- [('product_tmpl_id.property_id','=',property_number)]-->
                    <!--                    </attribute>-->
                    <attribute name="domain">
                        [('product_tmpl_id.property_id','=',property_number),('product_tmpl_id.state_id','=','شاغرة')]
                    </attribute>
                    <!--                    <attribute name="domain">[('product_tmpl_id.unit_number', '=',-->
                    <!-- unit_number),('product_tmpl_id.property_id','=',property_number),('product_tmpl_id.state_id','=','شاغرة')]-->
                    <!--                    </attribute>-->
                </xpath>
                <xpath expr="// field [@ name = 'order_line'] / tree / field [@ name = 'name']" position="attributes">
                    <attribute name="required">False</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="contract_number"/>
                    <field name="invoice_terms"/>
                    <field name="invoice_number"/>
                    <field name="operating_unit_id"/>
                    <!--                    <field name="property_name"/>-->
                    <!--                    <field name="unit_number"/>-->
                </xpath>
                <xpath expr="//field[@name='date_order']" position="after">
                    <label for="fromdate" string="مدة العقد"/>
                    <div class="d-flex">
                        <field name="fromdate"/>
                        <span class="o_form_label mx-3 oe_edit_only">الي</span>
                        <field name="todate"/>
                    </div>
                </xpath>
                <xpath expr="//page[@name='order_lines']" position="after">
                    <page name="contract_info" string="بيانات العقد">
                        <group>
                            <group>
                                <field name="order_contract"/>
                                <field name="brand_nameplate_allowed"/>
                                <field name="ejar" attrs="{'required': [('state', '=', 'ejar_upload')]}"/>
                                <field name="ejar_number" attrs="{'required': [('state', '=', 'ejar_upload')]}"/>
                                <field name="ejar_date" attrs="{'required': [('state', '=', 'ejar_upload')]}"/>
                                <field name="remarks_c"/>
                                <field name="file"/>
                                <field name="updated_invoices"/>
                            </group>

                            <group>
                                <field name="contract_hegira_date" placeholder="dd/mm/yyyy"/>
                                <field name="contract_penalties"/>
                                <field name="contractor_pen"/>
                                <field name="contract_extra_maintenance_cost"/>
                            </group>
                        </group>
                    </page>

                    <page name="contract_invoices" string="الفواتير">

                        <button name="create_order_invoices" string="Regenerate Invoices" type="object" class="btn-primary"/>

                        <field name="order_contract_invoice" widget="section_and_note_one2many">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="amount" sum="Total Amount"/>
                                <field name="fromdate"/>
                                <field name="todate"/>
                                <field name="invoice_date"/>
                                <field name="status"/>
                                <field name="services" widget="many2many_tags" optional="hide"/>
                                <button name="create_invoices" type="object" string="Create Invoice" class="btn-success"
                                        attrs="{'invisible':[('status','=', 'invoiced')]}"/>
                            </tree>
                        </field>
                    </page>
                    <page name="property_stats" string="حالة الوحدات">
                        <field name="order_property_state" widget="section_and_note_one2many" mode="tree,form"
                               context="{'default_sale_order': active_id}">
                            <form>
                                <group>
                                    <field name="sale_order" invisible="1"/>
                                    <field name="sale_order_line_id"/>
                                    <!--                                    <field name="product_id"/>-->
                                </group>
                                <notebook>
                                    <page name="pickup_contract" string="التسليم">
                                        <group>
                                            <group string="التواريح">
                                                <field name="h_return_date"/>
                                                <field name="return_date"/>
                                            </group>

                                            <group string="دهان السقف والجدران">
                                                <field name="wall_good"/>
                                                <field name="wall_bad"/>
                                                <field name="wall_none"/>
                                                <field name="wall_comment"/>
                                            </group>
                                            <group string="الأرضيات">
                                                <field name="floor_good"/>
                                                <field name="floor_bad"/>
                                                <field name="floor_none"/>
                                                <field name="floor_comment"/>
                                            </group>
                                            <group string="الحمامات والأطقم الصحية">
                                                <field name="rbath_good"/>
                                                <field name="rbath_bad"/>
                                                <field name="rbath_none"/>
                                                <field name="rbath_comment"/>
                                            </group>
                                            <group string="الكهرباء والإضاءة">
                                                <field name="elec_good"/>
                                                <field name="elec_bad"/>
                                                <field name="elec_none"/>
                                                <field name="elec_comment"/>
                                            </group>
                                            <group string="السباكة والتمديدات">
                                                <field name="water_good"/>
                                                <field name="water_bad"/>
                                                <field name="water_none"/>
                                                <field name="water_comment"/>
                                            </group>
                                            <group string="خزان المياه">
                                                <field name="wate_good"/>
                                                <field name="wate_bad"/>
                                                <field name="wate_none"/>
                                                <field name="wate_comment"/>
                                            </group>
                                            <group string="حالة الأبواب">
                                                <field name="door_good"/>
                                                <field name="door_bad"/>
                                                <field name="door_none"/>
                                                <field name="door_comment"/>
                                            </group>
                                            <group string="النوافذ">
                                                <field name="window_good"/>
                                                <field name="window_bad"/>
                                                <field name="window_none"/>
                                                <field name="window_comment"/>
                                            </group>
                                            <group string="أجهزة التكييف">
                                                <field name="ac_good"/>
                                                <field name="ac_bad"/>
                                                <field name="ac_none"/>
                                                <field name="ac_comment"/>
                                            </group>
                                            <group string="الإنتر كوم ( النداء الخارجي )">
                                                <field name="ii_good"/>
                                                <field name="ii_bad"/>
                                                <field name="ii_none"/>
                                                <field name="ii_comment"/>
                                            </group>
                                            <group string="أعمال الجبس">
                                                <field name="geps_good"/>
                                                <field name="geps_bad"/>
                                                <field name="geps_none"/>
                                                <field name="geps_comment"/>
                                            </group>
                                            <group string="المفاتيح">
                                                <field name="keys_good"/>
                                                <field name="keys_bad"/>
                                                <field name="keys_none"/>
                                                <field name="keys_comment"/>
                                            </group>
                                            <group string="أخرى">
                                                <field name="other_good"/>
                                                <field name="other_bad"/>
                                                <field name="other_none"/>
                                                <field name="other_comment"/>
                                            </group>
                                            <group string="الغاء رخصة البلدية">
                                                <field name="il_good"/>
                                                <field name="il_bad"/>
                                                <field name="il_none"/>
                                                <field name="il_comment"/>
                                            </group>
                                            <group string="الملاجظات">
                                                <field name="notes"/>
                                            </group>
                                            <group string="موافق العميل بالسكن">
                                                <field name="customer_accept"/>
                                                <field name="customer_refused"/>
                                            </group>
                                            <group string="موافقة الأدارة علي المستأجر">
                                                <field name="mangement_accept"/>
                                                <field name="mangement_refused"/>
                                            </group>
                                            <group string="القراءات الحالية">
                                                <field name="recent_electricity"/>
                                                <field name="recent_water"/>
                                            </group>
                                            <group string="ملاحظة">
                                                <field name="manage_note"/>
                                            </group>
                                        </group>
                                    </page>
                                    <page name="return_contract" string="الإستلام">
                                        <group>
                                            <group string="التواريح">
                                                <field name="h_pickup_date"/>
                                                <field name="pickup_date"/>
                                            </group>
                                            <group string="دهان السقف والجدران">
                                                <field name="rwall_good"/>
                                                <field name="rwall_bad"/>
                                                <field name="rwall_none"/>
                                                <field name="rwall_comment"/>
                                            </group>
                                            <group string="الأرضيات">
                                                <field name="rfloor_good"/>
                                                <field name="rfloor_bad"/>
                                                <field name="rfloor_none"/>
                                                <field name="rfloor_comment"/>
                                            </group>
                                            <group string="الحمامات والأطقم الصحية">
                                                <field name="rbath_good"/>
                                                <field name="rbath_bad"/>
                                                <field name="rbath_none"/>
                                                <field name="rbath_comment"/>
                                            </group>
                                            <group string="الكهرباء والإضاءة">
                                                <field name="relec_good"/>
                                                <field name="relec_bad"/>
                                                <field name="relec_none"/>
                                                <field name="relec_comment"/>
                                            </group>
                                            <group string="السباكة والتمديدات">
                                                <field name="rwater_good"/>
                                                <field name="rwater_bad"/>
                                                <field name="rwater_none"/>
                                                <field name="rwater_comment"/>
                                            </group>
                                            <group string="خزان المياه">
                                                <field name="rwate_good"/>
                                                <field name="rwate_bad"/>
                                                <field name="rwate_none"/>
                                                <field name="rwate_comment"/>
                                            </group>

                                            <group string="حالة الأبواب">
                                                <field name="rdoor_good"/>
                                                <field name="rdoor_bad"/>
                                                <field name="rdoor_none"/>
                                                <field name="rdoor_comment"/>
                                            </group>
                                            <group string="النوافذ">
                                                <field name="rwindow_good"/>
                                                <field name="rwindow_bad"/>
                                                <field name="rwindow_none"/>
                                                <field name="rwindow_comment"/>
                                            </group>
                                            <group string="أجهزة التكييف">
                                                <field name="rac_good"/>
                                                <field name="rac_bad"/>
                                                <field name="rac_none"/>
                                                <field name="rac_comment"/>
                                            </group>
                                            <group string="الإنتر كوم ( النداء الخارجي )">
                                                <field name="rii_good"/>
                                                <field name="rii_bad"/>
                                                <field name="rii_none"/>
                                                <field name="rii_comment"/>
                                            </group>
                                            <group string="أعمال الجبس">
                                                <field name="rgeps_good"/>
                                                <field name="rgeps_bad"/>
                                                <field name="rgeps_none"/>
                                                <field name="rgeps_comment"/>
                                            </group>
                                            <group string="المفاتيح">
                                                <field name="rkeys_good"/>
                                                <field name="rkeys_bad"/>
                                                <field name="rkeys_none"/>
                                                <field name="rkeys_comment"/>
                                            </group>
                                            <group string="أخرى">
                                                <field name="rother_good"/>
                                                <field name="rother_bad"/>
                                                <field name="rother_none"/>
                                                <field name="rother_comment"/>
                                            </group>
                                            <group string="الغاء رخصة البلدية">
                                                <field name="ril_good"/>
                                                <field name="ril_bad"/>
                                                <field name="ril_none"/>
                                                <field name="ril_comment"/>
                                            </group>
                                            <group string="الملاجظات">
                                                <field name="rnotes"/>
                                            </group>
                                            <group string="يوجد مستحقات">
                                                <field name="is_cost"/>
                                                <field name="is_no_cost"/>
                                            </group>
                                            <group string="المبلغ المتبقي">
                                                <field name="is_amount_rem"/>
                                                <field name="is_no_amount_rem"/>
                                                <field name="amount_rem" style="width:15%"/>
                                            </group>
                                            <group string="تصفية عداد الكهرباء">
                                                <field name="iselec_remain"/>
                                                <field name="isnotelec_remain"/>
                                            </group>
                                            <group string="القراءات الحالية">
                                                <field name="rrecent_electricity"/>
                                                <field name="rrecent_water"/>
                                            </group>

                                            <group string="ملاحظة">
                                                <field name="rmanage_note"/>
                                            </group>
                                        </group>
                                    </page>
                                </notebook>
                            </form>
                            <tree>
                                <field name="sequence" widget="handle"/>
                                <field name="sale_order_line_id"/>
                            </tree>

                        </field>
                    </page>
                </xpath>

                <xpath expr="//field[@name='origin']" position="replace">
                    <field name="opportunity_id" readonly="1"/>
                </xpath>

                <xpath expr="//div[@name='button_box']" position="after">
                    <div class="badge-pill badge-info float-right"
                         attrs="{'invisible': [('full_invoiced', '=', False)]}">Fully Invoiced
                    </div>
                    <div class="badge-pill badge-info float-right"
                         attrs="{'invisible': ['|', ('full_invoiced', '=', True),('no_of_not_invoiced', '=', 0) ]}">
                        <field name="no_of_invoiced"/>
                        /
                        <field name="no_of_not_invoiced"/>
                    </div>
                    <div class="badge-pill badge-info float-right"
                         attrs="{'invisible': ['|', ('full_invoiced', '=', True),('no_of_not_invoiced', '=', 0) ]}">
                        <field name="no_of_invoiced_amount"/>
                        /
                        <field name="no_of_not_invoiced_amount"/>
                    </div>

                    <field name="full_invoiced" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="rental_order_view_search_bstt" model="ir.ui.view">
            <field name="name">rental.order.search</field>
            <field name="model">sale.order</field>
            <field name="priority">150</field>
            <field name="inherit_id" ref="sale_renting.rental_order_view_search"/>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="team_id"]' position="after">
                    <field name="contract_number"/>
                    <field name="no_of_invoiced"/>
                    <field name="no_of_not_invoiced"/>
                    <field name="no_of_invoiced_amount"/>
                    <field name="no_of_not_invoiced_amount"/>
                </xpath>
                <xpath expr='//filter[@name="from_rental"]' position="after">
                    <filter string="Fully Invoiced" domain="[('full_invoiced', '=', True)]" name="full_invoiced"/>
                </xpath>
            </field>
        </record>

        <record id="rental_order_view_kanban_bstt" model="ir.ui.view">
            <field name="name">rental.order.kanban</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_renting.rental_order_view_kanban"/>
            <!--            <field name="mode">primary</field>-->
            <field name="priority">150</field>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="full_invoiced"/>
                    <field name="no_of_invoiced"/>
                    <field name="no_of_not_invoiced"/>
                    <field name="no_of_invoiced_amount"/>
                    <field name="no_of_not_invoiced_amount"/>
                </field>
                <xpath expr="//div[hasclass('oe_kanban_bottom_left')][1]" position="after">
                    <!--                    <div class="oe_kanban_bottom_right">-->
                    <div class="o_kanban_inline_block "
                         attrs="{'invisible': ['|', ('full_invoiced', '=', True),('no_of_not_invoiced', '=', 0) ]}">
                        <field name="no_of_invoiced"/>
                        /
                        <field name="no_of_not_invoiced"/>
                        -
                        <field name="no_of_invoiced_amount"/>
                        /
                        <field name="no_of_not_invoiced_amount"/>
                    </div>

                    <div class="o_kanban_record_title" attrs="{'invisible': [('full_invoiced', '=', False)]}">Fully
                        Invoiced
                    </div>
                    <!--                    </div>-->
                </xpath>

            </field>
        </record>
    </data>
</odoo>