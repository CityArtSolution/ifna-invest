<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="helpdesk.helpdesk_ticket_type_action" model="ir.actions.act_window">
            <field name="name">Helpdesk Types</field>
            <field name="res_model">helpdesk.ticket.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No types found. Let's create one!
                </p>
                <p>
                    Types are perfect for categorizing your tickets.
                </p>
            </field>
        </record>

        <!--  Inherit Form View to Modify it  -->
        <record id="helpdesk.helpdesk_ticket_type_menu" model="ir.ui.menu">
            <field name="name">HelpDesk Types</field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="helpdesk_ticket_type_new_trr_view" model="ir.ui.view">
            <field name="name">helpdesk.ticket.type.new</field>
            <field name="model">helpdesk.ticket.type</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_type_view_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="helpdesk_teams_ids" widget="many2many_tags"/>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="helpdesk_ticket_new_form_view" model="ir.ui.view">
            <field name="name">helpdesk.ticket.new</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='ticket_type_id']" position="replace">
                    <!-- Add your fields or attributes here -->
                    <field name="ticket_type_id" domain="[('helpdesk_teams_ids','in',team_id)]"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
