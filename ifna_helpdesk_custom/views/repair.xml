<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="repair_order_new_form_view_repair" model="ir.ui.view">
            <field name="name">repair.order.new</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_validate']" position="replace">
                    <button name="action_validate" states="draft" type="object" string="Confirm Repair"
                            class="oe_highlight" data-hotkey="v"
                            groups="ifna_helpdesk_custom.group_repair_manager"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="compound_id"/>
                    <field name="analytic_account_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
