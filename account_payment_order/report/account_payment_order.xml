<odoo>
    <template id="print_account_payment_order_document">
        <t t-set="doc" t-value="doc.with_context({'lang': doc.generated_user_id and doc.generated_user_id.lang or user.lang})" />
        <t t-call="web.basic_layout">

            <div class="page">
                <div class="row" style="margin-top:0px">
                    <div class="col-4">
                        <img src="/account_payment_order/static/description/header.png" width="50%" alt=""/>
                    </div>
                    <div class="col-2"></div>
                    <div class="col-6" style="text-align:right;">
                        <br/>
                        <strong>Date: <t t-esc="doc.date_generated.strftime('%d/%m/%Y')"></t>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <h3>Payment Order: <span style="color:#00008B;font-size:24px" t-esc="doc.name"></span>
                            </h3>
                        </strong>
                    </div>
                </div>
                <br/>
                <div class="container" style="border: 1px solid black;padding-right: 10px;padding-left:10px">
                    <div class="row" style="margin-top:0px">
                        <div class="col-4">
                        </div>
                        <div class="col-2"></div>
                        <div class="col-6" style="text-align:right;">
                            <br/>
                            <strong>
                                <span style="padding-right: 10px;padding-left:10px" t-esc="doc.company_currency_id.symbol"></span>
                                <br/>
Amount:
                                <span style="background-color:#808080;padding-right: 3px;padding-left:3px" t-esc="doc.total_amount"></span>
                            </strong>
                        </div>
                    </div>
                    <br/>
                    <table>
                        <tr>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-3" style="text-align:center;border-bottom: 1px solid #808080;">
                                    <strong>Payment Method</strong>
                                </div>
                                <div class="col-4" style="border-bottom: 1px solid #808080;">
                                    <span style="text-align:left" t-esc="doc.payment_mode_id.payment_method_id.display_name"></span>
                                </div>
                                <div class="col-4"></div>
                            </div>
                        </tr>
                        <tr>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-3" style="text-align:center;border-bottom: 1px solid #808080;">
                                    <strong>Amount</strong>
                                </div>
                                <div class="col-4" style="border-bottom: 1px solid #808080;">
                                    <span class="text-center" style="padding:0px;direction: rtl;border-top: none!important;">
                                        <t t-set="amo1" t-value="doc._convert_num_to_text(doc.total_amount)"/>
                                        <span t-esc="amo1"/>
                                    </span>
                                </div>
                                <div class="col-4"></div>

                            </div>
                        </tr>
                        <tr>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-3" style="text-align:center;border-bottom: 1px solid #808080;">
                                    <strong>Beneficiary</strong>
                                </div>
                                <div class="col-4" style="border-bottom: 1px solid #808080;">
                                    <span style="text-align:left" t-esc="doc.payment_line_ids[0].partner_id.name"></span>
                                </div>
                                <div class="col-4"></div>

                            </div>
                        </tr>
                        <tr>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-3" style="text-align:center;border-bottom: 1px solid #808080;">
                                    <strong>Purpose</strong>
                                </div>
                                <div class="col-4" style="border-bottom: 1px solid #808080;">
                                    <span style="text-align:left" t-esc="doc.description"></span>
                                </div>
                                <div class="col-4"></div>

                            </div>
                        </tr>
                        <tr>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-3" style="text-align:center;border-bottom: 1px solid #808080;">
                                    <strong>Details</strong>
                                </div>
                                <div class="col-4" style="border-bottom: 1px solid #808080;">
                                    <span style="text-align:left"></span>
                                </div>
                                <div class="col-4"></div>

                            </div>
                        </tr>
                    </table>
                    <br/>
                    <div class="row">
                        <div class="col-1"></div>
                        <div class="col-7">
                            <div class="row" style="border: 1px solid black;">
                                <div class="col-12" style="text-align:left;background-color:#808080">
                                    <spna>For Finance Department Use Only</spna>
                                </div>
                            </div>
                            <div class="row" style="border: 1px solid #808080;">
                                <div class="col-6" style="text-align:left;">
                                    <strong>Net Amount Paid</strong>
                                </div>
                                <div class="col-6" style="text-align:left;">
                                    <span style="background-color:#808080;padding-right: 3px;padding-left:3px" t-esc="doc.total_amount"></span>
                                </div>
                            </div>
                            <div class="row" style="border: 1px solid #808080;">
                                <div class="col-6" style="text-align:left;">
                                    <strong>Paid Method</strong>
                                </div>
                                <div class="col-6" style="text-align:left;">
                                    <span style="text-align:left" t-esc="doc.payment_mode_id.payment_method_id.display_name"></span>
                                </div>
                            </div>
                            <div class="row" style="border: 1px solid #808080;">
                                <div class="col-6" style="text-align:left;">
                                    <strong>Bank Name</strong>
                                </div>
                                <div class="col-6" style="text-align:left;">
                                    <t t-if="doc.company_partner_bank_id">
                                        <span style="text-align:left" t-esc="doc.company_partner_bank_id.name"></span>
                                    </t>
                                    <t else="">
                                        <span>N/A</span>
                                    </t>
                                </div>
                            </div>
                            <div class="row" style="border: 1px solid #808080;">
                                <div class="col-6" style="text-align:left;">
                                    <strong>Bank Account Number</strong>
                                </div>
                                <div class="col-6" style="text-align:left;">
                                <t t-if="doc.payment_line_ids[0].partner_bank_id">
                                        <span style="text-align:left" t-esc="doc.company_partner_bank_id.acc_number"></span>
                                    </t>
                                    <t else="">
                                        <span>N/A</span>
                                    </t>
                                </div>
                            </div>
                            <div class="row" style="border: 1px solid #808080;">
                                <div class="col-6" style="text-align:left;">
                                    <strong>Beneficiary Account Name</strong>
                                </div>
                                <div class="col-6" style="text-align:left;">
                                <t t-if="doc.payment_line_ids[0].partner_bank_id">
                                        <span style="text-align:left" t-esc="doc.payment_line_ids[0].partner_bank_id.name"></span>
                                    </t>
                                    <t else="">
                                        <span>N/A</span>
                                    </t>
                                </div>
                            </div>
                            <div class="row" style="border: 1px solid #808080;">
                                <div class="col-6" style="text-align:left;">
                                    <strong>Swift Code</strong>
                                </div>
                                <div class="col-6" style="text-align:left;">
                                </div>
                            </div>
                            <div class="row" style="border: 1px solid #808080;">
                                <div class="col-6" style="text-align:left;">
                                    <strong>Reviewed By</strong>
                                </div>
                                <div class="col-6" style="text-align:left;">
                                </div>
                            </div>
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                </div>
                <div class="oe_structure" />
            </div>
        </t>
    </template>
    <template id="print_account_payment_order_main">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="account_payment_order.print_account_payment_order_document" t-lang="doc.generated_user_id.lang" />
            </t>
        </t>
    </template>
</odoo>
